<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/teacher_questionPaper_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.TeacherQuestPapersActivity"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/teacher_question_paper"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:title="Question Paper"
        app:menu="@menu/classroom"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/teacher_questionPaper_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/input_layout_margin"
        />
    <TextView
        android:id="@+id/teacher_noQuestionPaper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/no_question_papers"
        android:gravity="center"
        android:visibility="gone"
        />

</LinearLayout>