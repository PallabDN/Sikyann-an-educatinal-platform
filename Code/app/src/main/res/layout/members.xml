<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/cardElevation"
        app:cardCornerRadius="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/input_layout_margin">
            <TextView
                android:id="@+id/classRoomMemeberName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/name"
                android:layout_weight="10"
                android:textColor="@color/black"
                android:textSize="@dimen/input_text_size"
                android:layout_marginRight="@dimen/input_layout_margin"
                android:layout_marginEnd="@dimen/input_layout_margin"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/memberJoinDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/date"
                android:layout_weight="2"
                />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>