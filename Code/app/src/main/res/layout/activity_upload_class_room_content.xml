<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/upload_classRoom_content_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.UploadClassRoomContentActivity"
    android:orientation="vertical">

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_marginTop="@dimen/input_layout_margin"
        android:layout_marginLeft="@dimen/input_layout_margin"
        android:layout_marginRight="@dimen/input_layout_margin"
        android:hint="@string/title"
        app:boxStrokeColor="@color/black"
        app:boxCornerRadiusBottomEnd="@dimen/input_layout_corner_radius"
        app:boxCornerRadiusBottomStart="@dimen/input_layout_corner_radius"
        app:boxCornerRadiusTopEnd="@dimen/input_layout_corner_radius"
        app:boxCornerRadiusTopStart="@dimen/input_layout_corner_radius"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/content_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/small_input_text_size"
            android:inputType="text"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_marginLeft="@dimen/input_layout_margin"
        android:layout_marginRight="@dimen/input_layout_margin"
        android:hint="@string/description"
        app:boxStrokeColor="@color/black"
        app:boxCornerRadiusBottomEnd="@dimen/input_layout_corner_radius"
        app:boxCornerRadiusBottomStart="@dimen/input_layout_corner_radius"
        app:boxCornerRadiusTopEnd="@dimen/input_layout_corner_radius"
        app:boxCornerRadiusTopStart="@dimen/input_layout_corner_radius"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/content_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/small_input_text_size"
            android:inputType="text"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_marginLeft="@dimen/input_layout_margin"
        android:layout_marginRight="@dimen/input_layout_margin"
        android:hint="@string/link"
        app:boxStrokeColor="@color/black"
        app:boxCornerRadiusBottomEnd="@dimen/input_layout_corner_radius"
        app:boxCornerRadiusBottomStart="@dimen/input_layout_corner_radius"
        app:boxCornerRadiusTopEnd="@dimen/input_layout_corner_radius"
        app:boxCornerRadiusTopStart="@dimen/input_layout_corner_radius"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/content_resource_link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/small_input_text_size"
            android:inputType="textUri"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/input_layout_margin"
        android:layout_marginLeft="@dimen/input_layout_margin"
        android:layout_marginRight="@dimen/input_layout_margin">
        <Button
            android:id="@+id/uploadClassroomPDF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pdf"
            android:background="@drawable/button_style"
            android:padding="@dimen/button_padding"
            android:layout_weight="1"
            />
        <Button
            android:id="@+id/uploadClassroomImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/image"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/input_layout_margin"
            android:background="@drawable/button_style"
            android:padding="@dimen/button_padding"
            android:layout_marginStart="@dimen/input_layout_margin" />
    </LinearLayout>

    <ImageView
        android:id="@+id/content_image"
        android:layout_marginTop="@dimen/input_layout_margin"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/image"
        android:layout_margin="@dimen/input_layout_margin"
        android:visibility="gone"
        />
    <Button
        android:id="@+id/content_pdf"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_margin="@dimen/input_layout_margin"
        android:background="@drawable/button_style"
        android:text="@string/pdf"
        android:visibility="gone"
        />



    <Button
        android:id="@+id/createContentFinish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/finish"
        android:layout_marginTop="@dimen/input_layout_margin"
        android:layout_marginLeft="@dimen/input_layout_margin"
        android:layout_marginRight="@dimen/input_layout_margin"
        android:background="@drawable/button_style"
        android:padding="@dimen/button_padding"
        />


</LinearLayout>